        mc:Ignorable="d"
        Title="Байкшеринг" Height="431" Width="600" WindowStartupLocation="CenterScreen">
    <Grid MaxHeight="426.7" MaxWidth="600">

        <Border>
            <Image Source="images/bike3.png" Margin="0,-7,0,-8"/>
