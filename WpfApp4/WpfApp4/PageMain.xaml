<Window x:Class="WpfApp4.PageMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp4"
        mc:Ignorable="d"
        Title="PageMain" Height="450" Width="780" WindowStartupLocation="CenterScreen">

    <Grid Background="#555556" Margin="10" MinHeight="345" MinWidth="710" MaxHeight="450" MaxWidth="780">
        
        <TextBlock Text="Аренда транспорта в Казани" FontSize="25" FontWeight="Bold"  Foreground="White" HorizontalAlignment="Center"/>

        <Button  Margin="10,10,709,358" Background="#555556" BorderBrush="#555556" Click="Button_ClickExit" MinHeight="25" MaxHeight="55" MinWidth="30" MaxWidth="35">
            <Image Source="images/1286853.png" RenderTransformOrigin="-0.222,0.605" />
        </Button>

        <!--<Button  Margin="734,10,10,358" Background="#555556" BorderBrush="#555556"  Click="Button_ClickInfo" >
            <Image Source="images/info6.png" Margin="722,10,0,352"/>
        </Button>-->

        <Button FontSize="16" FontWeight="Bold"  Margin="709,10,10,358" Click="Button_ClickInfo" MinHeight="21" MaxHeight="55" MinWidth="18" MaxWidth="35">
            <Image Source="images/info3.png" Margin="0,-1,0,0" />
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}">
                        <ContentPresenter/>
                    </Border>
                </ControlTemplate>
            </Button.Template>

            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Background" Value="#555556"/>
                    <Style.Triggers>
                        <Trigger Property="IsPressed" Value="true">
                            <Setter Property="Background" Value="#555556"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        <!--<Button  Margin="118,117,385,106"  Background="#555556" BorderBrush="#555556" Click="Button_ClickKikshering" >

